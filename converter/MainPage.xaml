<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter1="clr-namespace:converter"
             x:Class="converter.MainPage"
             >
    <ContentPage.BindingContext>
        <converter1:PersonViewModel/>
    </ContentPage.BindingContext>
    <StackLayout VerticalOptions="Start">
         <Label Text="Конвертер валют" FontAttributes="Bold" FontSize="30" Margin="80, 0, 0, 0"></Label>
        <StackLayout VerticalOptions="Center">
        <Grid>
            <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Picker Grid.Column="0" Grid.Row="0" x:Name="FirstInput" Title="Select Valute" 
                ItemsSource="{Binding ValutesList}"
                SelectedItem="{Binding FirstValute}">
        </Picker>
        <Entry Grid.Column="1" Grid.Row="0"
               Placeholder="Введите значение"
               Text="{Binding ValueInput, TargetNullValue=''}"></Entry>
        <Picker Grid.Column="0" Grid.Row="2" x:Name="SecondInput" Title="Select Valute" 
                ItemsSource="{Binding ValutesList}"
                SelectedItem="{Binding SecondValute}">
        </Picker>
        <Label Grid.Column="1" Grid.Row="2" Text="{Binding Conversion}"/>
        <DatePicker Grid.Column="0" Grid.Row="4" Format="MM/dd/yyyy"
                    Date="{Binding SelectedDate}"></DatePicker>
        <Image Grid.Row="4" Grid.Column="1" Source="calendar.png"
            HeightRequest="30"
            WidthRequest="30">
        </Image>
        
        
    </Grid>
        </StackLayout>
        <!--<Image Source="calendar.png"
               HeightRequest="30"
               WidthRequest="30"></Image>-->
    </StackLayout>
</ContentPage>
